<Window x:Class="LibraryManagementSystem.WindowMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem"
        mc:Ignorable="d"
        Title="Библиотека" 
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        FontSize="20"
        Loaded="ActualWindow_OnLoaded">

    <Window.Resources>
        <Style TargetType="{x:Type TextBox}">
            <Setter Property="AcceptsReturn" Value="False"/>
            <Setter Property="AcceptsTab" Value="False"/>
        </Style>
    </Window.Resources>

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!--<Menu VerticalAlignment="Stretch" Grid.Row="0">
            <MenuItem Header="Файл">
                <MenuItem Header="Новый">
                    <MenuItem Header="Публикация"/>
                    <MenuItem Header="Книга" IsEnabled="False"/>
                </MenuItem>
                <MenuItem Header="Указать файл базы данных"/>
            </MenuItem>
            <MenuItem Header="Изменить" Click="ToPage0">
            </MenuItem>
            <MenuItem Header="Настройки">
                <MenuItem Header="1"/>
            </MenuItem>
            <MenuItem Header="Окно">
                <MenuItem Header="0" Click="ToPage0"/>
                <MenuItem Header="1" Click="ToPage1"/>
            </MenuItem>
        </Menu>-->

        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.Resources>
                <Style TargetType="{x:Type Control}" x:Key="BaseStyle1">
                    <Setter Property="FontSize" Value="11"/>
                </Style>
                <Style TargetType="Button" BasedOn="{StaticResource BaseStyle1}">
                    <Setter Property="Height" Value="20"/>
                    <Setter Property="Width" Value="20"/>
                    <Setter Property="Margin" Value="1 0"/>
                </Style>
            </Grid.Resources>

            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <Button Name="New" Content="N" ToolTip="Новый" Click="New_OnClick"/>
                <Button Name="Edit" Content="E" ToolTip="Редактировать"/>
                <Button Name="Reports" Content="R" ToolTip="Отчёты"/>
                <Button Name="Delete" Content="D" ToolTip="Удалить"/>
                <Button Name="Preferences" Content="P" ToolTip="Настройки"/>
                <Menu>
                    <MenuItem Name="Window" Header="W" ToolTip="Окно">
                        <MenuItem Header="1" Click="ToPage0"/>
                        <MenuItem Header="2" Click="ToPage1"/>
                    </MenuItem>
                </Menu>
            </StackPanel>

            <Grid Grid.Column="1">
                <TextBox Name="SearchBox" MinWidth="300" MaxLines="1" FontSize="11" VerticalContentAlignment="Center" 
                         TextChanged="SearchBox_OnTextChanged" HorizontalAlignment="Stretch" KeyDown="SearchBox_OnKeyDown"/>
                <TextBlock Name="DummySearchText" Foreground="DimGray" Text=" Поиск" VerticalAlignment="Center" FontSize="11" 
                           MouseDown="DummySearchText_OnMouseDown" HorizontalAlignment="Stretch"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Grid.Column="2">
                <Button Name="Filter" Width="Auto" Content="Фильтры"/>
                <Button Name="Search" Width="Auto" Content="Найти"/>
                <Button Name="ShowAll" Width="Auto" Content="Показать все"/>
            </StackPanel>
        </Grid>

        <Frame Grid.Row="1" Name="MainView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>